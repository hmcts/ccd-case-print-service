{
  "name": "ccd-case-print-service",
  "version": "1.2.0",
  "private": true,
  "engines": {
    "node": "^8.11.1",
    "yarn": "^1.12.3"
  },
  "scripts": {
    "start": "./node_modules/.bin/ts-node -r tsconfig-paths/register src/main/server.ts",
    "lint": "tslint --project tsconfig.json && sass-lint -v -q",
    "sass": "gulp sass copy-files",
    "test": "NODE_ENV=mocha LOG_LEVEL=OFF mocha --compilers ts:ts-node/register -r tsconfig-paths/register $(find src/test \\( -name '*.ts' -or -name '*.js' \\) ! -path '*a11y*' ! -path '*/routes/*') --reporter mochawesome --reporter-options reportFilename=unit,inlineAssets=true,reportTitle=expressjs-template-unit",
    "test:routes": "NODE_ENV=mocha LOG_LEVEL=OFF mocha --compilers ts:ts-node/register -r tsconfig-paths/register $(find src/test \\( -name '*.ts' -or -name '*.js' \\) -path '*/routes/*') --reporter mochawesome --reporter-options reportFilename=routes,inlineAssets=true,reportTitle=expressjs-template-routes",
    "test:a11y": "NODE_ENV=mocha LOG_LEVEL=ERROR mocha --compilers ts:ts-node/register -r tsconfig-paths/register src/test/a11y --timeout 60000 --reporter mochawesome --reporter-options reportFilename=a11y,inlineAssets=true,reportTitle=expressjs-template-a11y",
    "test:unit": "NODE_ENV=test NODE_PATH=. mocha 'test/**/*.spec.js' --reporter spec --recursive",
    "test:coverage": "NODE_ENV=mocha LOG_LEVEL=OFF nyc mocha --compilers ts:ts-node/register -r tsconfig-paths/register $(find src/test \\( -name '*.ts' -or -name '*.js' \\) ! -path '*a11y*' ! -path '*/routes/*')",
    "test:acceptance": "echo 'TODO - CALL JAVA INTEGRATION TEST'",
    "test:nsp": "nsp check",
    "test:smoke": "echo SMOKE TESTS NOT CONFIGURED",
    "test:functional": "echo 'TODO - FUNCTIONAL TEST'",
    "sonar-scan": "NODE_PATH=. sonar-scanner -X -Dsonar.projectKey='ccd-case-print-service' -Dsonar.sources=src/main/ -Dsonar.tests=src/test/ -Dsonar.exclusions=node_modules/**,coverage/** -Dsonar.javascript.lcov.reportPaths=coverage/lcov.info -Dsonar.language=js -Dsonar.profile=node",
    "setup": "echo 'No setup required'",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "dependencies": {
    "@hmcts/nodejs-healthcheck": "^1.4.5",
    "@hmcts/nodejs-logging": "^3.0.0",
    "@types/node": "^10.5.4",
    "applicationinsights": "^1.0.8",
    "body-parser": "^1.18.1",
    "config": "^1.26.2",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "express": "^4.15.4",
    "express-nunjucks": "^2.2.3",
    "govuk-elements-sass": "^3.1.1",
    "govuk_template_jinja": "^0.23.0",
    "helmet": "^3.8.1",
    "jquery": "^3.2.1",
    "jwt-decode": "^2.2.0",
    "mime": "^1.4.0",
    "node-fetch": "^1.7.3",
    "nunjucks": "^3.0.1",
    "nunjucks-date-filter": "^0.1.1",
    "nunjucks-numeral-filter": "^0.0.2",
    "otp": "^0.1.3",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.4.4",
    "snyk": "^1.85.0",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^2.6.0",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^2.2.43",
    "@types/sinon-chai": "^2.7.29",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "debug": "^3.1.0",
    "gulp": "^3.9.1",
    "gulp-livereload": "^3.8.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-plumber": "^1.1.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^3.1.0",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "^0.2.0",
    "jasmine-core": "^2.3.4",
    "jasmine-spec-reporter": "^3.2.0",
    "json-loader": "^0.5.3",
    "json-server": "^0.9.6",
    "jsonwebtoken": "^8.2.2",
    "karma": "1.4.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.0.3",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-remap-istanbul": "0.2.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "2.0.2",
    "mocha": "^3.5.3",
    "mochawesome": "^2.3.1",
    "moment": "^2.22.2",
    "nock": "^9.1.4",
    "node-mocks-http": "^1.6.5",
    "nsp": "^3.2.1",
    "nyc": "13.0.0",
    "pa11y": "^4.13.2",
    "proxyquire": "^1.8.0",
    "remap-istanbul": "^0.9.6",
    "sass-lint": "^1.11.1",
    "sinon": "^3.3.0",
    "sinon-chai": "^2.13.0",
    "sonar-scanner": "^3.0.3",
    "supertest": "^3.0.0",
    "tslint": "^5.7.0",
    "webpack": "^2"
  },
  "snyk": true,
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/main"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/main/public",
      "src/main/modules",
      "src/main/router",
      "src/main/util",
      "src/main/app.ts",
      "src/main/server.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "coverage",
    "all": true
  }
}
